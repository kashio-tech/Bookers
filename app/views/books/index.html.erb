<h1>Books</h1>
<% if @book.errors.any? %>
	<%@book.errors.full_messages.each do |m|%>
	<%= m %><br>
	<%end%>
<%end%>
<table>
    <tr>
        <th>Body</th>
        <th>Title</th>
        <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
        <td>
            <%= book.title %>
        </td>
        <td>
            <%= book.body %>
        </td>
        <td>
            <%= link_to "Show", book_path(book) %>
            <%= link_to "Edit", edit_book_path(book) %>
            <%= link_to "Destroy", book_path(book), method: :delete %>
        </td>
    </tr>
    <% end %>
</table>
<h1>New Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>
<% end %>